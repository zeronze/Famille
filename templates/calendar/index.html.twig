{% extends 'base.html.twig' %}

{% block title %}Calendrier{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-5">Calendrier</h1>

    <a href="{{ path('app_calendar_new') }}" class="btn btn-primary mb-3">Ajouter un rendez-vous</a>

    <table class="table table-striped">
        <thead>
            <tr>
                
                <th>Titre</th>
                <th>Début</th>
                <th>Fin</th>
                <th>Description</th>
                <th>Toute la journée</th>
                <th>Couleur de fond</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for calendar in calendars %}
                <tr>
                 
                    <td>{{ calendar.title }}</td>
                    <td>{{ calendar.start ? calendar.start|date('d/m/Y H:i') : '' }}</td>
                    <td>{{ calendar.end ? calendar.end|date('d/m/Y H:i') : '' }}</td>
                    <td>{{ calendar.description }}</td>
                    <td>{{ calendar.allDay ? 'Oui' : 'Non' }}</td>
                    <td>{{ calendar.backgroundColor }}</td>
                    <td>
                        <a href="{{ path('app_calendar_show', {'id': calendar.id}) }}" class="btn btn-info mt-2">Voir</a>
                        <a href="{{ path('app_calendar_edit', {'id': calendar.id}) }}" class="btn btn-warning mt-2">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
