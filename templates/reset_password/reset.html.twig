{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h1 class="text-center">Réinitialiser votre mot de passe</h1>

                {{ form_start(resetForm, {'attr': {'class': 'form'}}) }}
                    <div class="form-group">
                        {{ form_row(resetForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Réinitialiser le mot de passe</button>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
    
{% endblock %}
